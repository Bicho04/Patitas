mixin font(typography)
  link(href='https://fonts.googleapis.com/css?family=#{typography}' rel='stylesheet' type='text/css')

doctype html
html(lang='Es-Py')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    block title
      title Asociacion de patitas Felices Py

    meta(name='description', content='Club de Beneficios')
    meta(name='viewport', content='width=680, user-scalable=no')

    link(rel='stylesheet', href='assets/css/main.css')
    
    block font
      +font('Indie+Flower')
      +font('Ubuntu:400,500,400italic')

  body
